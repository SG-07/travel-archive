<% layout('/layout/boilerplate') %>

<svg xmlns="http://www.w3.org/2000/svg" class="d-none">
  <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </symbol>
</svg>

<div class="row mt-5">
    <div class="alert alert-danger d-flex flex-column align-items-center col-lg-8 col-md-10 col-sm-12" role="alert">
        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" style="width: 20px; height: 20px;"> 
            <use xlink:href="#exclamation-triangle-fill"/>
        </svg>
        <h4 class="fw-bold">Error <%= statusCode %></h4>
        <h5 class="mt-2"><%= message %></h5>
        <p class="text-center mt-3">Oops! Something went wrong. If this issue persists, please contact support.</p>
    </div>
    <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Go Back Home</a>
    </div>
</div>



