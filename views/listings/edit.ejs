<% layout('/layout/boilerplate') %>
<body>
    <form method="POST" action="/listings/<%= listing._id %>/?_method=PUT">
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <br>
                <h3>Edit your Listing</h3>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" rows="4" cols="25" required><%= listing.description %></textarea>
                </div>
        
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" class="form-control" value="<%= listing.image %>" type="text">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" value="<%= listing.price %>" type="number" required>
                    </div>
        
        
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" class="form-control" value="<%= listing.location %>" type="text" required>
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" class="form-control" value="<%= listing.country %>" type="text" required>
                </div>
        
                <br>
                <button class="btn btn-primary edit-btn mt-2">Submit</button>
                <br>
                <br>
            </div>
        </div>

    </form>

</body>