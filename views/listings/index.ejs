<% layout('/layout/boilerplate') %>
<body>
    <h2>All Listings</h2>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-1 row-cols-lg-3 row-cols-md-3 row-cols-sm-3">
        <% for(let listing of allListings)  {%>
        <div class="card col" style="width: 18rem;">
            <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
            <div class="card-body">
                <p class="card-text"><%= listing.title %> <br>
                    <%= listing.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %> /night
                </p>
            </div>
        </div>
    <% } %>
    </div>
     
    
</body>
