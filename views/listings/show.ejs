<% layout('/layout/boilerplate') %>
<body>
    <h3>Lisitng Details:-</h3>
    <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li><%= listing.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
    </ul>
    <a href="/listings/<%= listing._id %>/edit">Edit your Listing here!</a>
    <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirmDelete()">
        <button>Delete</button>
    </form>

    <script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this listing?");
    }
    </script>

</body>
