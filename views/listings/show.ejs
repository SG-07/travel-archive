<% layout('/layout/boilerplate') %>

<div class="container">
    <div class="row">
        <!-- Title -->
        <div class="col-8 offset-3">
            <br>
            <h3><strong><%= listing.title %></strong></h3>
        </div>    

        <!-- Listing Card -->
        <div class="card listing-card col-6 offset-3">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text"> <strong>Owned by: </strong> <i><%= listing.owner.username %></i> </p>
                <p class="card-text"> <%= listing.description %> </p>
                <p class="card-text"> <strong>Price: </strong> <%= listing.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %> </p>
                <p class="card-text"> <strong>Location: </strong> <%= listing.location %> </p>
                <p class="card-text"> <strong>Country: </strong> <%= listing.country %> </p>
            </div>
        </div>

        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
            <!-- Buttons -->
            <div class="btn-show offset-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary col-2 offset-1">Edit</a>
                <button class="btn btn-outline-danger col-2" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
            </div>

        <br>
        <% } %>

        <!-- Review Form Section -->
        <br>
        <div class="col-8 offset-3 mb-3">
            <% if (currUser) { %>
            <hr/>
            <h4>Leave a Review</h4>
            <form method="POST" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>
                <!-- star -->
                <div class="mb-3 mt-3">
                    <label class="form-label">Rating</label>
                    <div class="rating">
                        <input type="radio" id="star5" name="review[rating]" value="5">
                        <label for="star5" class="star">&#9733;</label>
                        <input type="radio" id="star4" name="review[rating]" value="4">
                        <label for="star4" class="star">&#9733;</label>
                        <input type="radio" id="star3" name="review[rating]" value="3" checked>
                        <label for="star3" class="star">&#9733;</label>
                        <input type="radio" id="star2" name="review[rating]" value="2">
                        <label for="star2" class="star">&#9733;</label>
                        <input type="radio" id="star1" name="review[rating]" value="1">
                        <label for="star1" class="star">&#9733;</label>
                    </div>
                </div>



                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" cols="20" rows="5" class="form-control" required
                        placeholder="Write your review here."></textarea>
                    <div class="invalid-feedback">Please write your review</div>
                </div>

                <br>
                <button class="btn btn-outline-primary col-3 offset-3">Submit</button>
            </form>
            <% } %>
        
        

            <!-- Reviews Section -->
            <hr/>
            <h3>All Reviews</h3>
            <div class="row">
                <% if (listing.reviews && listing.reviews.length > 0) { %>
                    <% for (review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= review.author.username %></h5>
                                <p class="card-text">Comments: <%= review.comment %></p>
                                <!-- Dynamically display stars -->
                                <p class="card-text">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <% if (i <= review.rating) { %>
                                            <span class="star" style="color: gold;">&#9733;</span>
                                        <% } else { %>
                                            <span class="star" style="color: gray;">&#9733;</span>
                                        <% } %>
                                    <% } %>
                                </p>
                                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                                    <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        
                                        <button class="btn btn-outline-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>    
                        </div>
                    <% } %>
                <% } else { %>
                    <p class="offset-3 text-muted">No reviews yet. Be the first to review!</p>
                <% } %>
            </div>    
        </div>
    </div>     
</div> 

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this listing?
            </div>
            <div class="modal-footer">
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
